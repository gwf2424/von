<%= provide(:title, 'Admin Setting') %>
<h1>System settings</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@setting) do |f| %>
		
		<%= f.label :isUseMail, class: 'checkbox inline' do%>
		<%= f.check_box :isUseMail, checked: @setting.isUseMail %>
		<span>Use Mail Active</span>
		<% end %>

		<%= f.label :isPicMicropost, class: 'checkbox inline' do%>
		<%= f.check_box :isPicMicropost, checked: @setting.isPicMicropost %>
		<span>Use PicMicropost Active</span>
		<% end %>
		
		<%= f.submit "Save changes", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>