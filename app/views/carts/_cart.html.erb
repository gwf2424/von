<h2>Your Cart</h2>
<table>
	<%= render(cart.line_items) %>

	<tr>
		<td colspan="1">Total</td>
		<td><strong id="total_<%= cart.id %>"><%= number_to_currency(cart.total_price, unit: 'RMB') %></strong></td>
	</tr>
</table>
<%= button_to 'Pay Now', data: { confirm: 'Are you sure?' } %>
<%= button_to 'Empty Cart', cart, method: :delete, data: { confirm: 'Are you sure?' } %>
