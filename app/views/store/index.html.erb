<h1>Store<%= session[:cart_id] %></h1>
<div>
	<p><%= pluralize session[:store_index_count], 'time' %></p>
	<%= button_to 'Delete session', sessions_reset_path %>
</div>
<br/>

<% cache ['store', Product.latest] do %>
	<% @products.each do |product| %>
	<% cache ['entry', product] do %>
		<div class="entry">
			<%= image_tag(product.image_url) %>
			<h3><%= product.title %></h3>
			<h3><%= sanitize(product.description) %></h3>
			<div class="price_line">
				<span class="price"><%= number_to_currency(product.price, unit: "Â¥") %></span>
				<%= button_to 'Add to Cart', line_items_path(product_id: product) %>
				<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
			</div>
		</div>
		<% end %>
	<% end %>
<% end %>